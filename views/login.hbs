<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Sign In</h2>
            {{#if errorMessage}}
            <div class="alert alert-danger">
                <strong>Error:</strong> {{errorMessage}}</div>
            {{/if}}
            <hr />
            <form method="post" action="/login">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input class="form-control" id="userName" name="userName" type="text" placeholder="User Name" required value="" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input class="form-control" id="password" name="password" type="password" placeholder="Password" required />
                        </div>
                    </div>
                </div>
                <div class="loginButtons">
                    <input type="submit" class="btn btn-info btn-custom loginButtonGroup1" value="Sign In" /> 
                    <div class="loginButtonGroup2">or
                    <a href="/register">Create an account</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>